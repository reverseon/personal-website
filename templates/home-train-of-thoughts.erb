<h2>Train of Thoughts</h2>
<% if thoughts.empty? %>
  <p style="color: #8b949e; font-style: italic; margin: 2rem 0;">No thoughts yet.</p>
<% else %>
  <div class="thoughts-timeline">
    <% thoughts.first(3).each do |thought| %>
      <% counter = { count: 0 } %>
      <%= render_partial('_train-of-thoughts-content', { thought: thought, depth: 0, max_depth: 2, counter: counter, max_items: 3 }) %>
    <% end %>
  </div>
  <% if thoughts.length > 3 %>
    <div class="see-more-container">
      <a href="/carriages/1.html" class="see-more-link">See more â†’</a>
    </div>
  <% end %>
<% end %>
